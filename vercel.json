{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/$1"
        }
    ],
    "routes": [
        {
            "src": "/api/categories",
            "dest": "/src/routes/categories.js"
        },
        {
            "src": "/api/news",
            "dest": "/src/routes/news.js"
        },
        {
            "src": "/api/login",
            "dest": "/src/routes/login.js"
        }
    ]
}